---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="image-container"/>
			<div class="lg:w-1/2 mx-auto p-4">
				<p>
					Welcome! My name is Johanne McClenahan. This is my blog! The goal of this blog is to explore new technologies and talk about living in Spokane Washington!
				</p>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.image-container {
		background-image: url('/photography.jpeg');
		background-size: cover;
		background-position: center;
		height: 500px;
		filter : brightness(50%);
		z-index: -1;
	}

	@media (max-width: 720px) {
		.image-container{
			height: 300px;
		}
	}
</style>
